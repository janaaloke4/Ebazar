<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot_pass"
    android:background="@drawable/signup1"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="          Authentication required"
        android:layout_marginTop="130dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="#180D2B"
        android:id="@+id/text1"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/text1"
    android:layout_marginTop="10dp"
    android:text="Enter the mobile number associated with your E-Bazar account"
    android:textSize="19dp"
    android:textColor="#000000"
    android:id="@+id/text2"
    />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_ph"
        app:errorEnabled="true"
        android:layout_below="@+id/text2"
        android:textColorHint="#ffffff"
        android:layout_marginTop="10dp"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ph"
            android:hint="  Your mobile phone number"
            android:textSize="3mm"
            android:inputType="phone"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:id="@+id/verify"
        android:text="Verify"
        android:layout_below="@+id/in_ph"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="3mm"
        android:gravity="center"
        android:background="@color/colorlogback"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:layout_below="@+id/verify"
        android:layout_marginTop="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        android:text="For your security we need to authenticate your request.We've sent an OTP to the mobile number"
        android:textSize="19dp"
        android:textColor="#000000"
        />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/oph"
            android:layout_below="@+id/verify"
            android:textSize="19dp"

            android:textColor="#F7FAFC"
            android:layout_marginLeft="-220dp"
            android:layout_marginTop="49dp"
            />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="0dp"
        android:text="Please enter it below to complect verification"
        android:textColor="#000000"
        android:layout_below="@+id/linear"
        android:id="@+id/text4"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/in_otp"
        app:errorEnabled="true"
        android:layout_below="@+id/text4"
        android:textColorHint="#ffffff"
        android:layout_marginTop="10dp"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/otp"
            android:hint="Enter OTP"
            android:textSize="3mm"
            android:inputType="phone"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:id="@+id/conti"
        android:text="Continue"
        android:layout_below="@+id/text4"
        android:textAllCaps="false"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="3mm"
        android:gravity="center"

        android:background="@color/colorlogback"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/or"
        android:layout_below="@+id/in_otp"
        android:layout_marginLeft="200dp"
        android:text="or"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffffff"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_below="@+id/in_otp"
        android:layout_toLeftOf="@+id/or"
        android:layout_marginRight="-190dp"
        android:layout_marginTop="27dp"
        android:background="#ffffff"
        />
    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_below="@+id/in_otp"
        android:layout_toRightOf="@+id/or"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:background="#ffffff"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Not get OTP yet?"
            android:textColor="#000000"
            android:textSize="19dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Resend OTP"
            android:textSize="19dp"
            android:textColor="#12324B"
            android:textStyle="bold"
            android:id="@+id/resentOtp"
            />
    </LinearLayout>
</RelativeLayout>