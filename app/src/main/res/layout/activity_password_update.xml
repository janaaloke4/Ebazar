<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passwordUpdate"
    android:background="@drawable/signup1"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="          Password assistance"
        android:layout_marginTop="100dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="#180D2B"
        android:id="@+id/text1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        android:layout_below="@+id/text1"
        android:layout_marginTop="10dp"
        android:text="We'll ask for this password whenever you sign in."
        android:textSize="19dp"
        android:textColor="#000000"

        />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_pass"
        app:errorEnabled="true"
        android:layout_below="@+id/text2"
        android:textColorHint="#ffffff"
        android:layout_marginTop="5dp"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass"
            android:hint="Enter new password"
            android:textSize="3mm"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hlpid"
        android:layout_below="@+id/in_pass"
        android:layout_marginTop="-15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i."
            android:textStyle="italic|bold"
            android:textColor="#3147C5"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/help"
            android:text="  Password must be at least 6 characters Long."
            android:textSize="15dp"
            android:textColor="#000000"

            />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in_cpass"
        app:errorEnabled="true"
        android:layout_below="@+id/hlpid"
        android:textColorHint="#ffffff"
        android:layout_marginTop="5dp"

        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpass"
            android:hint="Re-enter new password"
            android:textSize="3mm"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:id="@+id/save"
        android:text="Save changes"
        android:layout_below="@+id/in_cpass"
        android:textAllCaps="false"
        android:layout_marginTop="0dp"
        android:textColor="#ffffff"
        android:textSize="3mm"
        android:gravity="center"
        android:background="@color/colorlogback"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        android:layout_below="@+id/save"
        android:text="Secure password tips:"
        android:layout_marginTop="10dp"
        android:textSize="23dp"
        android:textStyle="bold"
        android:textColor="#180D2B"
        />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hint"
        android:layout_marginTop="-10dp"
        >
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="->"
                android:textSize="19dp"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use least 8 characters,a combination of numbers and letters is best."
            android:textSize="19dp"
            android:padding="10dp"
            />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="->"
                android:textSize="19dp"
                android:layout_marginTop="-15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do not use dictionary words, your name, email address,mobile phone number or other personal information that can be easily obtained."
                android:textSize="19dp"
                android:padding="10dp"
                android:layout_marginTop="-15dp"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="->"
                android:textSize="19dp"
                android:layout_marginTop="-15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do not use the same password for multiple online account."
                android:textSize="19dp"
                android:padding="10dp"
                android:layout_marginTop="-15dp"
                />
        </TableRow>
    </TableLayout>


</RelativeLayout>